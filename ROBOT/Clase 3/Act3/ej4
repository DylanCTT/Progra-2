programa ej4

procesos
  
areas
  area: AreaPC (5,5,50,30)
  inicioCoord: AreaP(1,1,1,1)
  inicio1: AreaP(7,4,7,4)
  inicio2: AreaP(9,4,9,4)
  inicio3: AreaP(11,4,13,4)
  inicio4: AreaP(13,4,13,4)
  
robots
  robot robot1
  comenzar
    
  fin
  
  robot coord
  variables
    turno:numero
    av:numero
    ca:numero
  comenzar
    repetir 20
      Random(turno,1,3)
      Random(av,5,50)
      Random(ca,5,30)
      
  fin
  
variables
  robot1:tipo1
  robot2:tipo2
  robot3:tipo3
  robotCoord:coord
  
comenzar
  AsignarArea(robot1,area)
  AsignarArea(robot1,inicio1)
  AsignarArea(robot2,area)
  AsignarArea(robot2,inicio2)
  AsignarArea(robot3,area)
  AsignarArea(robot3,inicio3)
  AsignarArea
  AsignarArea(robotCoord,area)
  AsignarArea(robotCoord,inicioCoord)
  Iniciar(robot1, 7,4)
  Iniciar(robot2, 9,4)
  Iniciar(robot3, 11,4)
  Iniciar(robotCoord, 1,1)
fin